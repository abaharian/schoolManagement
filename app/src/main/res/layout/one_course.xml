<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/oc_layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:layout_marginTop="30dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/one_student_border"
        android:orientation="horizontal"
        android:gravity="right"
        android:layoutDirection="rtl">
    <LinearLayout
        android:id="@+id/oc_layout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_weight="1">

        <TextView
            android:id="@+id/oc_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="دین و زندگی"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#000" />

        <TextView
            android:id="@+id/oc_tv_teacher_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="دبیر آقای رستخیز"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#888" />
    </LinearLayout>
    <TextView
        android:id="@+id/oc_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="1396/01/28"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_gravity="left|center_vertical" />
    </LinearLayout>
</RelativeLayout>